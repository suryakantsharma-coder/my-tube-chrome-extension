{
  "manifest_version": 3,
  "name": "My Tube",
  "version": "1.0",
  "description": "My Tube",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["scripting", "activeTab","storage"],
  "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*",
    "https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
