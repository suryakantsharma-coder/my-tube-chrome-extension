{
  "manifest_version": 3,
  "name": "My Tube",
  "version": "1.0",
  "description": "My Tube",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "my-tube.png",
      "48": "my-tube.png",
      "128": "my-tube.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["scripting", "activeTab","storage", "https://youtube.com/*",
    "https://*.youtube.com/*"],
  "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
